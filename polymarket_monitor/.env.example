# Polymarket Whale Bot - Environment Configuration

# ===== REQUIRED =====

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Google AI (Gemini Pro)
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# ===== BOT SETTINGS =====

# Mode: "semi" (alerts only) or "full" (auto-trading)
BOT_MODE=semi

# Whale Detection Threshold ($)
WHALE_THRESHOLD=10000

# Risk Management
MAX_BET_AMOUNT=50
MAX_DAILY_BETS=5
MAX_DAILY_LOSS=200

# ===== POLYMARKET (FULL AUTO MODE ONLY) =====

# Uncomment these if using FULL AUTO mode
# POLYMARKET_PRIVATE_KEY=your_private_key_here
# POLYMARKET_FUNDER_ADDRESS=your_funder_address_here

# ===== OPTIONAL =====

# Logging
LOG_LEVEL=INFO

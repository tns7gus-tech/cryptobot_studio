# CryptoBot Studio Environment Variables

# ============================================
# Telegram Bot Settings
# ============================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ============================================
# Upbit API Settings
# ============================================
# Upbit API 키 발급: https://upbit.com/mypage/open_api_management
# 필요 권한: 자산조회, 주문조회, 주문하기
UPBIT_ACCESS_KEY=your_upbit_access_key_here
UPBIT_SECRET_KEY=your_upbit_secret_key_here

# ============================================
# Trading Settings
# ============================================
# 거래 대상 마켓 (예: KRW-BTC, KRW-ETH)
TRADE_SYMBOL=KRW-BTC

# 1회 거래 금액 (KRW)
TRADE_AMOUNT=10000

# ============================================
# Strategy Settings (RSI)
# ============================================
RSI_PERIOD=14
RSI_BUY_THRESHOLD=30
RSI_SELL_THRESHOLD=70

# ============================================
# Strategy Settings (Bollinger Bands)
# ============================================
BB_PERIOD=20
BB_STD=2

# ============================================
# Risk Management
# ============================================
MAX_DAILY_TRADES=10
MAX_DAILY_LOSS=50000

# ============================================
# Bot Mode
# ============================================
# semi: 알림만 (실거래 안함)
# full: 자동매매 활성화
BOT_MODE=semi

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
